
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-xl-8 col-lg-8 col-md-10 col-sm-12 ">
            <div class="card bg-light mb-3">
            <div class="card-header">Datos del cliente</div>
            <div class="card-body">
                <h4 class="text-center mb-2 mt-2">Orden #{{order}}</h4>
                {{#each ClientData}}
                <p>Nombre: {{Nombre_client}} {{Apellido_client}}</p>
                <p>Direccion: {{direccion_client}}</p>
                <p>Telefono: {{Telefono_client}}</p>
                <p>E-mail: {{mail_client}}</p>
                {{/each}}
                <p>{{msj}}</p>
            </div>
            <a href="/paneladmin"><button class="button btn btn-success btn-block mt-5 mb-5">Back to panel </button></a>
        </div>
    </div>
</div>