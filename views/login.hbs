<div class="container-fluid" >
    <div class="row justify-content-center mt-5" >
            <div class="col-md-10 col-lg-4 col-xl-4 col-sm-12">
                <h1 class="text-center">Log in</h1>
                <form method="POST" action="/login">
                <input type="text" required class="form-control mt-2" name="usuario_u" placeholder="E-mail">
                <input type="password" required class="form-control mt-2" placeholder="Password" name="password_u" id="p1">
                <input type="checkbox" name="showpass" onclick="showpassword()" class="mt-3">
                <label for="showpass" class="form-check-label">Show password</label>
                <button type="submit" class="btn btn-success btn-block mt-2">Send</button>
                </form>
                <span class="text-danger">{{alerta}}</span>
                <a href="/registro"><p class="text-left mt-2" style="font-size: 18px">Sing up</p></a>
            </div>
    </div>
</div>